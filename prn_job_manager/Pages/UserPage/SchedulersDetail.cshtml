@page
@model prn_job_manager.Pages.UserPage.SchedulersDetailModel
@{
    Layout = "Shared/_Layout1";
}
<link href="~/css/Home.css" rel="stylesheet" />
<link href="~/Image" rel="stylesheet" />
<main data-v-c0d0209c="" tabindex="0" class="flex-1 relative z-0 overflow-y-auto py-6 focus:outline-none">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
        <div>
            <div class="h-96">
                <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
                    <div class="mt-2 mb-5 md:flex md:items-center md:justify-between">
                        <div class="flex-1 min-w-0">
                            <h2 class="text-indigo-900 text-md sm:text-3xl sm:leading-9 sm:truncate">
                                <a href="/schedulers"
                                   class="font-bold no-underline hover:underline hover:text-indigo-800 router-link-active">Schedulers</a>
                            </h2>
                            <div class="max-w-xl flex-1 text-sm leading-5 text-gray-500">
                                <p>
                                    Use schedulers to run any command or script
                                    periodically
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="bg-white overflow-hidden sm:rounded-md bg-white shadow-sm border-solid border-gray-100 border-2">
                        <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8 bg-gray-100">
                            <div class="md:grid md:grid-cols-3 md:gap-6">
                                <div class="md:col-span-1">
                                    <div class="px-4 sm:px-0">
                                        <h3 class="text-lg font-medium leading-6 text-gray-900">
                                            Let's create your scheduler
                                        </h3>
                                        <p class="mt-1 text-sm leading-5 text-gray-600">
                                            We will make an HTTP request to your Target URL
                                            according to your schedule. No more working with
                                            servers.
                                            <a href="https://docs.cronhub.io/#what-is-scheduler"
                                               class="text-purple-600 hover:text-gray-800">Learn more</a>
                                            about our scheduler.
                                        </p>
                                        <div class="hidden sm:block">
                                            <div class="py-5">
                                                <div class="border-t border-gray-200"></div>
                                            </div>
                                        </div>
                                        <!---->
                                    </div>
                                </div>
                                <div class="mt-5 md:mt-0 md:col-span-2">
                                    <div class="shadow overflow-hidden sm:rounded-md">
                                        <div class="px-4 py-5 bg-white sm:p-6">
                                            <div class="grid grid-cols-6 gap-6">
                                                <div class="col-span-6 sm:col-span-6">
                                                    <label for="name"
                                                           class="text-sm font-medium leading-5 text-gray-700">
                                                        Scheduler
                                                        name
                                                    </label>
                                                    <input id="name"
                                                           class="mt-1 form-input w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
                                                    <!---->
                                                </div>
                                                <div class="col-span-2 sm:col-span-2">
                                                    <label for="type"
                                                           class="text-sm font-medium leading-5 text-gray-700">
                                                        Schedule
                                                        type
                                                    </label>
                                                    <select id="type"
                                                            class="mt-1 block form-select w-full py-2 px-3 py-0 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5">
                                                        <option value="cron">Cron</option>
                                                        <option value="interval">Interval</option>
                                                    </select>
                                                </div>
                                                <!---->
                                                <div class="col-span-3 sm:col-span-6 lg:col-span-2">
                                                    <label for="interval_value"
                                                           class="text-sm font-medium leading-5 text-gray-700">
                                                        Run
                                                        every
                                                    </label>
                                                    <input type="number" min="1" id="interval_value"
                                                           class="mt-1 form-input w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5" />
                                                    <!---->
                                                </div>
                                                <div class="col-span-6 sm:col-span-6 lg:col-span-2">
                                                    <label for="interval_rate"
                                                           class="text-sm font-medium leading-5 text-gray-700">&nbsp;</label>
                                                    <select id="interval_rate"
                                                            class="mt-1 block form-select w-full py-2 px-3 py-0 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5">
                                                        <option disabled="disabled" value="">
                                                            Select rate
                                                        </option>
                                                        <option value="minutes">Minutes</option>
                                                        <option value="hours">Hours</option>
                                                        <option value="days">Days</option>
                                                    </select>
                                                </div>
                                                <div class="col-span-2 sm:col-span-2">
                                                    <label for="http_method"
                                                           class="text-sm font-medium leading-5 text-gray-700">Method</label>
                                                    <select id="http_method"
                                                            class="mt-1 block form-select w-full py-2 px-3 py-0 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5">
                                                        <option value="get">GET</option>
                                                        <option value="head">HEAD</option>
                                                        <option value="post">POST</option>
                                                        <option value="put">PUT</option>
                                                    </select>
                                                </div>
                                                <div class="col-span-4 sm:col-span-4">
                                                    <label for="url"
                                                           class="text-sm font-medium leading-5 text-gray-700">
                                                        Target
                                                        HTTP URL
                                                    </label>
                                                    <div class="mt-1 relative rounded-md shadow-sm">
                                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                            <svg fill="currentColor" viewBox="0 0 20 20"
                                                                 class="h-5 w-5 text-gray-400">
                                                                <path d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z"
                                                                      clip-rule="evenodd" fill-rule="evenodd">
                                                                </path>
                                                            </svg>
                                                        </div>
                                                        <input type="text" id="url"
                                                               placeholder="https://api.example.com/run_daily_job"
                                                               class="form-input block w-full pl-10 sm:text-sm sm:leading-5 border-gray-300 rounded" />
                                                    </div>
                                                    <!---->
                                                </div>
                                                <!---->
                                                <div class="sm:col-span-5 pt-4">
                                                    <label for="monitoring"
                                                           class="font-medium text-gray-700 w-full mt-4">
                                                        <span class="inline-flex items-center p-2 rounded text-sm font-medium leading-4 bg-gray-100 text-gray-500">Monitoring</span>
                                                    </label>
                                                    <div class="mt-2">
                                                        <fieldset>
                                                            <div class="mt-1">
                                                                <div class="relative flex items-start">
                                                                    <div class="absolute flex items-center h-12">
                                                                        <input id="monitoring"
                                                                               type="checkbox"
                                                                               class="form-checkbox h-4 w-4 text-indigo-600 transition duration-150 ease-in-out" />
                                                                    </div>
                                                                    <div class="pl-7 text-sm leading-5">
                                                                        <label for="comments"
                                                                               class="font-medium text-gray-700">
                                                                            Alert me after
                                                                            <select id="type"
                                                                                    class="mt-1 ml-1 form-select py-2 px-3 py-0 pr-9 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5">
                                                                                <option value="1">
                                                                                    1 failure
                                                                                </option>
                                                                                <option value="2">
                                                                                    2 consecutive failures
                                                                                </option>
                                                                                <option value="3">
                                                                                    3 consecutive failures
                                                                                </option>
                                                                            </select>
                                                                        </label>
                                                                        <p class="text-gray-500 mt-2">
                                                                            When your server responds with a
                                                                            status code that fails out of
                                                                            the
                                                                            range of 2xx (e.g. 403, 500) we
                                                                            consider your job failed.
                                                                        </p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </fieldset>
                                                    </div>
                                                </div>
                                                <div class="sm:col-span-6">
                                                    <div class="relative flex items-start">
                                                        <div class="absolute flex items-center h-5"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                                            <div class="flex justify-end">
                                                <span class="inline-flex rounded-md shadow-sm">
                                                    <button class="py-2 px-4 border border-gray-300 rounded-md text-sm leading-5 font-medium text-gray-700 hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-50 active:text-gray-800 transition duration-150 ease-in-out router-link-active"
                                                            type="button">
                                                        Cancel
                                                    </button>
                                                </span>
                                                <span class="ml-3 inline-flex rounded-md shadow-sm">
                                                    <button class="inline-flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-900 hover:bg-indigo-700 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-900 transition duration-150 ease-in-out">
                                                        <svg fill="currentColor" viewBox="0 0 20 20"
                                                             class="-ml-1 mr-3 h-5 w-5">
                                                            <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                                                  clip-rule="evenodd" fill-rule="evenodd">
                                                            </path>
                                                        </svg>Save
                                                    </button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<span data-v-c0d0209c="" class="inline-flex rounded-md shadow-sm fixed"
      style="bottom: 1.5em; right: 1.5em">
    <button data-v-c0d0209c="" type="button"
            class="inline-flex items-center hover:text-gray-900 hover:bg-gray-50 px-4 py-2 pointer border border-gray-300 text-base leading-6 font-medium rounded-md text-gray-600 bg-white hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:text-gray-800 active:bg-gray-50 transition ease-in-out duration-150">
        <svg data-v-c0d0209c="" fill="currentColor" viewBox="0 0 20 20" class="-ml-1 mr-3 h-5 w-5">
            <path data-v-c0d0209c=""
                  d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"></path>
            <path data-v-c0d0209c=""
                  d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z">
            </path>
        </svg>
        <span data-v-c0d0209c="">Submit feedback</span>
    </button>
</span>
