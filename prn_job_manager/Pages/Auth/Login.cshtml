@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginModel
@{
    Layout = "Shared/_Layout";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />
<style>
    .section-login {
        width: 28rem;
        margin-left: auto;
        margin-right: auto;
        margin-top: 2rem;
    }

    .button-login{
        width: 100%;
        background: #17123b;
        border-radius: 0.375rem;
    }

    .login_style{
        width: 32%;
        margin-left: auto;
        margin-right: auto;
        margin-top: 72px;
    }

    .background_login{
        padding: 30px;
        margin-top: 30px;
        background-color: #181A1b;
    }

    .header_login{
        text-align: center;
    }
    .header_login h1{
            font-size: 36px;
    }

    .header_login p{

    }
</style>
<section class="bg-info-light position-relative overflow-hidden">

    <div class="container position-relative">
        <div class="mw-6xl mx-auto">
            <div class="row align-items-center">
                <div class="login_style">
                    <div class="">
                        <div class="header_login">
                            <h1>
                                Sign in to your account 
                            </h1>
                            <p>
                                If you don't have an account then <a href="register" onclick="window.location.href='/auth/register'">sign up</a>.
                            </p>
                        </div>
                        <div class="mw-md py-5 mx-auto background_login">
                            <form asp-page="/Login" method="post">
                                <div class="mb-4">
                                    <label class="form-label fw-bold">Email Address *</label>
                                    <input class="form-control"
                                           type="email"
                                           placeholder="Enter email address"
                                           asp-for="@Model.User!.Email" />
                                    <span class="text-danger" asp-validation-for="@Model.User!.Email"></span><br />
                                </div>
                                <div class="mb-4">
                                    <label class="form-label fw-bold">Password *</label>
                                    <input class="form-control"
                                           type="password"
                                           placeholder="*******"
                                           asp-for="@Model.User!.Password" />
                                    <span class="text-danger" asp-validation-for="@Model.User!.Password"></span><br />
                                </div>
                                <div class="d-flex mb-5 flex-wrap align-items-center justify-content-between">
                                    <div>
                                        <a class="btn p-0 btn-link fs-9" asp-page="ForgotPassword">Forgot Password?</a>
                                    </div>
                                </div>
                                <input class="btn w-100 btn-primary shadow" type="submit" value="Sign In" />
                            </form>
                            <p class="text-danger">@ViewData["Error"]</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
