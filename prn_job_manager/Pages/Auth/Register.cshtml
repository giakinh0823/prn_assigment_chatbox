@page
@model RegisterModel
@{
    Layout = "_Layout";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />
<style>

    .section-login {
        width: 28rem;
        margin-left: auto;
        margin-right: auto;
        margin-top: 2rem;
    }

    .button-login {
        width: 100%;
        background: #17123b;
        border-radius: 0.375rem;
    }

</style>
<body>
    <div id="app" class="pt-16">
        <div class="">
            <div class="sm:mx-auto sm:w-full sm:max-w-md">
                <h2 class="mt-6 text-center text-3xl leading-9 font-extrabold text-gray-900">
                    Sign up to your account
                </h2>
                <p class="mt-2 text-center text-sm leading-5 text-gray-600 max-w">If you don't have an account then <a class="text-purple-600 hover:text-purple-900" href="">sign up.</a></p>
            </div>

            <div style="width:28rem" class="section-login">
                <div class="bg-white p-5 shadow sm:rounded-lg sm:px-10">

                    <form asp-page="/Register" method="post">
                        <input type="hidden" name="_token">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="mt-1">
                            <label for="name" class="form-label" asp-for="@Model.User!.Name">
                                Full Name
                            </label>
                            <div class="mt-1 rounded-md shadow-sm">
                                <input id="name" name="name" type="text" value="" required="" style="width:100%" asp-for="@Model.User!.Name" class="form-control">
                            </div>
                            <span class="text-danger" asp-validation-for="@Model.User!.Name"></span><br />
                        </div>
                        <div class="mt-1">
                            <label for="email" class=" text-sm font-medium leading-5 text-gray-700" asp-for="@Model.User!.Email">
                                Email
                            </label>
                            <div class="mt-1 rounded-md shadow-sm">
                                <input id="email" name="email" type="email" value="" required="" style="width:100%" asp-for="@Model.User!.Email">
                            </div>
                            <span class="text-danger" asp-validation-for="@Model.User!.Email"></span><br />
                        </div>

                        <div class="mt-3">
                            <label for="password" class=" text-sm font-medium leading-5 text-gray-700" asp-for="@Model.User!.Password">
                                Password
                            </label>
                            <div class="mt-1 rounded-md shadow-sm">
                                <input id="password" name="password" type="password" required="" asp-for="@Model.User!.Password" style="width:100%">
                            </div>
                            <span class="text-danger" asp-validation-for="@Model.User!.Password"></span>
                        </div>

                        <div class="mt-3">
                            <span class="block w-full rounded-md shadow-sm">
                                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent text-sm font-bold rounded-md text-white bg-purple-900 hover:bg-purple-600 focus:outline-none focus:border-purple-700 focus:shadow-outline-purple active:bg-purple-700 transition duration-150 ease-in-out button-login">
                                    Register
                                </button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>

</body>